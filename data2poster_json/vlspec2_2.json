{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Employment Share by Sex in Support Services and Education Sectors in Niue",
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/Occupation_by_gender.csv"
  },
  "transform": [
    {
      "filter": "(datum['Pacific Island Countries'] == 'Niue') && (datum['Economic sector'] == 'Support Service' || datum['Economic sector'] == 'Education')"
    },
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "Number of employed persons",
          "as": "EmployedPersons"
        }
      ],
      "groupby": [
        "Economic sector",
        "Sex"
      ]
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Economic sector",
      "type": "nominal",
      "axis": {
        "title": "Economic Sector",
        "labelAngle": -30
      }
    },
    "xOffset": {
      "field": "Sex"
    },
    "y": {
      "field": "EmployedPersons",
      "type": "quantitative",
      "axis": {
        "title": "Number of Employed Persons"
      }
    },
    "color": {
      "field": "Sex",
      "type": "nominal",
      "title": "Sex",
      "scale": {
        "scheme": "category10"
      }
    },
    "tooltip": [
      {
        "field": "Economic sector",
        "type": "nominal",
        "title": "Sector"
      },
      {
        "field": "Sex",
        "type": "nominal",
        "title": "Sex"
      },
      {
        "field": "EmployedPersons",
        "type": "quantitative",
        "title": "Employed Persons"
      }
    ]
  },
  "width": 600,
  "height": 500,
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 30,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 26,
      "labelFontSize": 26,
      "labelLimit": 0
    }
  }
}