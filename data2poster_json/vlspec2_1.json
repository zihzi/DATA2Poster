{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/Occupation_by_gender.csv"
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "Number of employed persons",
          "as": "Total Employed"
        }
      ],
      "groupby": [
        "Pacific Island Countries",
        "Sex"
      ]
    }
  ],
  "width": 900,
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Pacific Island Countries",
      "type": "nominal",
      "axis": {
        "title": "Pacific Island Countries",
        "titleFontSize": 30,
        "labelAngle": 45,
        "labelFontSize": 34,
        "labelLimit": 0
      }
    },
    "y": {
      "field": "Total Employed",
      "type": "quantitative",
      "title": "Number of Employed Persons"
    },
    "color": {
      "field": "Sex",
      "type": "nominal",
      "title": "Sex"
    },
    "xOffset": {
      "field": "Sex"
    }
  },
  "title": {
    "text": "Employment by Sex across Pacific Island Countries",
    "fontSize": 44,
    "anchor": "start"
  },
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 34,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 36,
      "labelFontSize": 34,
      "labelLimit": 0,
      "orient": "top",
      "offset": 10,
      "anchor": "start"
    }
  }
}