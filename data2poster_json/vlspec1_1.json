{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Number of Employed Persons by Country and Sex",
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/Occupation_gender_gap2.csv"
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "Number of employed persons",
          "as": "Total_Employed"
        }
      ],
      "groupby": [
        "Pacific Island Countries",
        "Sex"
      ]
    }
  ],
  "mark": {
    "type": "bar"
  },
  "encoding": {
    "x": {
      "field": "Pacific Island Countries",
      "type": "nominal",
      "title": "Pacific Island Country",
      "axis": {
        "labelAngle": -30,
        "tickCount": 6
      }
    },
    "xOffset": {
      "field": "Sex"
    },
    "y": {
      "field": "Total_Employed",
      "type": "quantitative",
      "title": "Number of Employed Persons"
    },
    "color": {
      "field": "Sex",
      "type": "nominal",
      "title": "Sex",
      "scale": {
        "scheme": "category10"
      }
    },
    "tooltip": [
      {
        "field": "Pacific Island Countries",
        "type": "nominal",
        "title": "Country"
      },
      {
        "field": "Sex",
        "type": "nominal"
      },
      {
        "field": "Total_Employed",
        "type": "quantitative",
        "title": "Number Employed",
        "format": ","
      }
    ]
  },
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 30,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 26,
      "labelFontSize": 26,
      "labelLimit": 0
    }
  }
}