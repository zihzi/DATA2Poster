{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Sex Share by Sector and Country",
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/Occupation_gender_gap.csv"
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "Sex share",
          "as": "TotalSexShare"
        }
      ],
      "groupby": [
        "Pacific Island Countries",
        "Economic sector",
        "Sex"
      ]
    }
  ],
  "mark": {
    "type": "bar"
  },
  "encoding": {
    "x": {
      "field": "Economic sector",
      "type": "nominal",
      "axis": {
        "labelAngle": -30,
        "title": "Economic Sector"
      }
    },
    "y": {
      "field": "TotalSexShare",
      "type": "quantitative",
      "title": "Total Sex Share"
    },
    "xOffset": {
      "field": "Sex"
    },
    "color": {
      "field": "Sex",
      "type": "nominal",
      "title": "Sex",
      "scale": {
        "scheme": "category10"
      }
    },
    "tooltip": [
      {
        "field": "Pacific Island Countries",
        "type": "nominal",
        "title": "Country"
      },
      {
        "field": "Economic sector",
        "type": "nominal",
        "title": "Sector"
      },
      {
        "field": "Sex",
        "type": "nominal",
        "title": "Sex"
      },
      {
        "field": "TotalSexShare",
        "type": "quantitative",
        "title": "Sex Share",
        "format": ".2f"
      }
    ],
    "facet": {
      "field": "Pacific Island Countries",
      "type": "nominal",
      "header": {
        "labelFontSize": 20,
        "title": "Country"
      }
    }
  },
  "width": 180,
  "height": 400,
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 30,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 26,
      "labelFontSize": 26,
      "labelLimit": 0
    }
  }
}