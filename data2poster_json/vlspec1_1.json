{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top 3 Beverage Categories by Beverage",
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/starbucks.csv"
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "mean",
          "field": "Calories",
          "as": "avg_calories"
        }
      ],
      "groupby": [
        "Beverage_category",
        "Beverage"
      ]
    },
    {
      "joinaggregate": [
        {
          "op": "mean",
          "field": "avg_calories",
          "as": "category_avg_calories"
        }
      ],
      "groupby": [
        "Beverage_category"
      ]
    },
    {
      "window": [
        {
          "op": "rank",
          "as": "cat_rank"
        }
      ],
      "sort": [
        {
          "field": "category_avg_calories",
          "order": "descending"
        }
      ]
    },
    {
      "filter": "datum.cat_rank <= 3"
    }
  ],
  "mark": {
    "type": "bar",
    "cornerRadius": 2
  },
  "encoding": {
    "x": {
      "field": "Beverage_category",
      "type": "nominal",
      "title": "Beverage Category",
      "axis": {
        "labelAngle": -30,
        "tickCount": 6
      },
      "sort": "-y"
    },
    "xOffset": {
      "field": "Beverage"
    },
    "y": {
      "field": "avg_calories",
      "type": "quantitative",
      "title": "Average Calories"
    },
    "color": {
      "field": "Beverage",
      "type": "nominal",
      "title": "Beverage",
      "scale": {
        "scheme": "tableau10"
      }
    },
    "tooltip": [
      {
        "field": "Beverage_category",
        "type": "nominal",
        "title": "Beverage Category"
      },
      {
        "field": "Beverage",
        "type": "nominal",
        "title": "Beverage"
      },
      {
        "field": "avg_calories",
        "type": "quantitative",
        "title": "Avg Calories"
      }
    ]
  },
  "width": 420,
  "height": 420,
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 30,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 26,
      "labelFontSize": 26,
      "labelLimit": 0
    }
  }
}