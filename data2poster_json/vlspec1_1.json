{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top 3 Devices Screen Hours by Limit",
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/Indian_Kids_Screen_Time_2.csv"
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "mean",
          "field": "Avg_Daily_Screen_hr",
          "as": "avg_screen_time"
        }
      ],
      "groupby": [
        "Primary_Device",
        "Exceeded_Recommended_Limit"
      ]
    },
    {
      "joinaggregate": [
        {
          "op": "sum",
          "field": "avg_screen_time",
          "as": "device_sum"
        }
      ],
      "groupby": [
        "Primary_Device"
      ]
    },
    {
      "window": [
        {
          "op": "dense_rank",
          "as": "device_rank"
        }
      ],
      "sort": [
        {
          "field": "device_sum",
          "order": "descending"
        }
      ]
    },
    {
      "filter": "datum.device_rank <= 3"
    }
  ],
  "mark": {
    "type": "bar",
    "cornerRadius": 2
  },
  "encoding": {
    "x": {
      "field": "Primary_Device",
      "type": "nominal",
      "title": "Primary Device",
      "axis": {
        "labelAngle": -30
      }
    },
    "xOffset": {
      "field": "Exceeded_Recommended_Limit"
    },
    "y": {
      "field": "avg_screen_time",
      "type": "quantitative",
      "title": "Avg Daily Screen Time (hrs)"
    },
    "color": {
      "field": "Exceeded_Recommended_Limit",
      "type": "nominal",
      "scale": {
        "scheme": "tableau10"
      },
      "title": "Exceeded Limit"
    },
    "tooltip": [
      {
        "field": "Primary_Device",
        "type": "nominal",
        "title": "Device"
      },
      {
        "field": "Exceeded_Recommended_Limit",
        "type": "nominal",
        "title": "Exceeded Limit"
      },
      {
        "field": "avg_screen_time",
        "type": "quantitative",
        "title": "Avg Daily Screen (hrs)",
        "format": ".2f"
      }
    ]
  },
  "width": 400,
  "height": 400,
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 30,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 26,
      "labelFontSize": 26,
      "labelLimit": 0
    }
  }
}