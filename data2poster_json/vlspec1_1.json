{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Employment by Sex and Country",
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/Occupation_by_gender.csv"
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "Number of employed persons",
          "as": "EmployedTotal"
        }
      ],
      "groupby": [
        "Pacific Island Countries",
        "Sex"
      ]
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Pacific Island Countries",
      "type": "nominal",
      "title": "Pacific Island Country",
      "axis": {
        "labelAngle": -30,
        "tickCount": 6
      },
      "sort": "-y"
    },
    "xOffset": {
      "field": "Sex"
    },
    "y": {
      "field": "EmployedTotal",
      "type": "quantitative",
      "title": "Number of Employed Persons"
    },
    "color": {
      "field": "Sex",
      "type": "nominal",
      "title": "Sex",
      "scale": {
        "scheme": "category10"
      }
    },
    "tooltip": [
      {
        "field": "Pacific Island Countries",
        "type": "nominal",
        "title": "Country"
      },
      {
        "field": "Sex",
        "type": "nominal",
        "title": "Sex"
      },
      {
        "field": "EmployedTotal",
        "type": "quantitative",
        "title": "Employed Persons",
        "format": ","
      }
    ]
  },
  "width": 700,
  "height": 480,
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 30,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 26,
      "labelFontSize": 26,
      "labelLimit": 0
    }
  }
}