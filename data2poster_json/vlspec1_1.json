{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top 3 Products by Profit per Market Size",
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/Coffee_Chain_3.csv"
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "mean",
          "field": "Profit",
          "as": "avg_profit"
        }
      ],
      "groupby": [
        "Product",
        "Market Size"
      ]
    },
    {
      "joinaggregate": [
        {
          "op": "mean",
          "field": "avg_profit",
          "as": "ProductTotal"
        }
      ],
      "groupby": [
        "Product"
      ]
    },
    {
      "window": [
        {
          "op": "dense_rank",
          "as": "product_rank"
        }
      ],
      "sort": [
        {
          "field": "ProductTotal",
          "order": "descending"
        }
      ]
    },
    {
      "filter": "datum.product_rank <= 3"
    }
  ],
  "mark": {
    "type": "bar"
  },
  "encoding": {
    "x": {
      "field": "Product",
      "type": "nominal",
      "title": "Product",
      "axis": {
        "labelAngle": -30,
        "tickCount": 6
      },
      "sort": {
        "field": "ProductTotal",
        "order": "descending"
      }
    },
    "xOffset": {
      "field": "Market Size"
    },
    "y": {
      "field": "avg_profit",
      "type": "quantitative",
      "title": "Average Profit"
    },
    "color": {
      "field": "Market Size",
      "type": "nominal",
      "title": "Market Size",
      "scale": {
        "scheme": "tableau10"
      }
    },
    "tooltip": [
      {
        "field": "Product",
        "type": "nominal"
      },
      {
        "field": "Market Size",
        "type": "nominal"
      },
      {
        "field": "avg_profit",
        "type": "quantitative",
        "title": "Average Profit",
        "format": ".1f"
      }
    ]
  },
  "width": 420,
  "height": 400,
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 30,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 26,
      "labelFontSize": 26,
      "labelLimit": 0
    }
  }
}