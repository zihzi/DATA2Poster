{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Total Sales Comparison Across Retailers",
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/adidas_sale.csv"
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "Total Sales",
          "as": "TotalSales"
        }
      ],
      "groupby": [
        "Retailer"
      ]
    },
    {
      "window": [
        {
          "op": "rank",
          "as": "RetailerRank"
        }
      ],
      "sort": [
        {
          "field": "TotalSales",
          "order": "descending"
        }
      ]
    },
    {
      "calculate": "datum.RetailerRank <= 4 ? datum.Retailer : 'Others'",
      "as": "RetailerGroup"
    },
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "TotalSales",
          "as": "SalesSum"
        }
      ],
      "groupby": [
        "RetailerGroup"
      ]
    },
    {
      "joinaggregate": [
        {
          "op": "sum",
          "field": "SalesSum",
          "as": "GrandTotal"
        }
      ]
    },
    {
      "calculate": "datum.SalesSum / datum.GrandTotal",
      "as": "Share"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "arc",
        "outerRadius": 180
      },
      "encoding": {
        "theta": {
          "field": "SalesSum",
          "type": "quantitative",
          "stack": "normalize"
        },
        "order": {
          "field": "SalesSum",
          "type": "quantitative",
          "sort": "descending"
        },
        "color": {
          "field": "RetailerGroup",
          "type": "nominal",
          "legend": {
            "title": "Retailer"
          },
          "scale": {
            "scheme": "tableau10"
          }
        },
        "tooltip": [
          {
            "field": "RetailerGroup",
            "type": "nominal",
            "title": "Retailer"
          },
          {
            "field": "SalesSum",
            "type": "quantitative",
            "title": "Total Sales",
            "format": ","
          },
          {
            "field": "Share",
            "type": "quantitative",
            "title": "Share (%)",
            "format": ".2%"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 16,
        "fontWeight": "bold"
      },
      "encoding": {
        "theta": {
          "field": "SalesSum",
          "type": "quantitative",
          "stack": "normalize"
        },
        "order": {
          "field": "SalesSum",
          "type": "quantitative",
          "sort": "descending"
        },
        "radius": {
          "value": 120
        },
        "text": {
          "field": "Share",
          "type": "quantitative",
          "format": ".1%"
        },
        "color": {
          "value": "black"
        }
      }
    }
  ],
  "width": 470,
  "height": 470,
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 30,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 26,
      "labelFontSize": 26,
      "labelLimit": 0
    }
  }
}