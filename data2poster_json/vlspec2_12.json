{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Employment by Sex in Tonga",
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/Occupation_by_gender.csv"
  },
  "transform": [
    {
      "filter": "datum['Pacific Island Countries'] == 'Tonga'"
    },
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "Number of employed persons",
          "as": "Total Employed"
        }
      ],
      "groupby": [
        "Sex"
      ]
    }
  ],
  "mark": {
    "type": "bar",
    "tooltip": true,
    "cornerRadiusEnd": 3
  },
  "encoding": {
    "x": {
      "field": "Sex",
      "type": "nominal",
      "axis": {
        "labelAngle": 0,
        "tickCount": 6
      },
      "scale": {
        "paddingInner": 0.5
      }
    },
    "y": {
      "field": "Total Employed",
      "type": "quantitative",
      "title": "Number of Employed Persons",
      "axis": {
        "format": "d",
        "minExtent": 30,
        "tickCount": 6,
        "min": 0
      },
      "scale": {
        "zero": true
      }
    },
    "color": {
      "value": "#4682b4"
    }
  },
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 30,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 36,
      "labelFontSize": 30,
      "labelLimit": 0
    }
  },
  "height": 600,
  "width": 800
}