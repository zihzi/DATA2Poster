{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/Occupation_by_gender.csv"
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "Number of employed persons",
          "as": "Employed"
        }
      ],
      "groupby": [
        "Sex",
        "Economic sector"
      ]
    },
    {
      "window": [
        {
          "op": "rank",
          "as": "sector_rank"
        }
      ],
      "groupby": [
        "Sex"
      ],
      "sort": [
        {
          "field": "Employed",
          "order": "descending"
        }
      ]
    },
    {
      "filter": "datum.sector_rank <= 5"
    }
  ],
  "mark": {
    "type": "bar"
  },
  "encoding": {
    "x": {
      "field": "Economic sector",
      "type": "nominal",
      "axis": {
        "title": "Economic Sector",
        "labelAngle": 45
      },
      "sort": null
    },
    "y": {
      "field": "Employed",
      "type": "quantitative",
      "title": "Number of Employed Persons"
    },
    "color": {
      "field": "Sex",
      "type": "nominal",
      "title": "Sex",
      "legend": {
        "orient": "top",
        "title": "Sex",
        "labelLimit": 0
      }
    },
    "tooltip": [
      {
        "field": "Economic sector",
        "type": "nominal",
        "title": "Sector"
      },
      {
        "field": "Sex",
        "type": "nominal"
      },
      {
        "field": "Employed",
        "type": "quantitative",
        "title": "Number of Employed Persons"
      }
    ],
    "column": null
  },
  "title": "Top 5 Economic Sectors by Number of Employed Persons, by Sex",
  "height": 500,
  "width": 600,
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 34,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 36,
      "labelFontSize": 34,
      "labelLimit": 0
    }
  }
}