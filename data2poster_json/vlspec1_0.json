{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Employed Persons by Pacific Island Country",
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/Occupation_by_gender.csv"
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "Number of employed persons",
          "as": "TotalEmployed"
        }
      ],
      "groupby": [
        "Pacific Island Countries"
      ]
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Pacific Island Countries",
      "type": "nominal",
      "title": "Pacific Island Country",
      "axis": {
        "labelAngle": -30,
        "tickCount": 6
      },
      "sort": "-y"
    },
    "y": {
      "field": "TotalEmployed",
      "type": "quantitative",
      "title": "Number of Employed Persons"
    }
  },
  "width": 700,
  "height": 480,
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 30,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 26,
      "labelFontSize": 26,
      "labelLimit": 0
    }
  }
}