{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Worldwide Revenue Trend by Year",
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/movies_record.csv"
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "mean",
          "field": "Worldwide $m",
          "as": "AvgWorldwideM"
        }
      ],
      "groupby": [
        "Year"
      ]
    }
  ],
  "mark": {
    "type": "line",
    "point": true,
    "color": "#4682b4",
    "strokeWidth": 4
  },
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "title": "Year",
      "axis": {
        "labelAngle": -30,
        "tickCount": 6,
        "titlePadding": 10
      },
      "sort": "-y"
    },
    "y": {
      "field": "AvgWorldwideM",
      "type": "quantitative",
      "title": "Avg Worldwide $m"
    },
    "tooltip": [
      {
        "field": "Year",
        "type": "ordinal",
        "title": "Year"
      },
      {
        "field": "AvgWorldwideM",
        "type": "quantitative",
        "title": "Avg Worldwide $m",
        "format": ".1f"
      }
    ]
  },
  "width": 400,
  "height": 400,
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 30,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 26,
      "labelFontSize": 26,
      "labelLimit": 0
    }
  }
}