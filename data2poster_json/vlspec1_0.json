{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Income by Number of Cars Owned",
    "anchor": "middle"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/bike_buyers.csv"
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "mean",
          "field": "Income",
          "as": "Average Income"
        }
      ],
      "groupby": [
        "Cars"
      ]
    }
  ],
  "mark": {
    "type": "bar",
    "color": "#5470c6"
  },
  "encoding": {
    "x": {
      "field": "Cars",
      "type": "ordinal",
      "title": "Number of Cars Owned",
      "axis": {
        "labelAngle": -30,
        "tickCount": 6
      }
    },
    "y": {
      "field": "Average Income",
      "type": "quantitative",
      "title": "Average Income",
      "axis": {
        "tickCount": 6
      }
    },
    "tooltip": [
      {
        "field": "Cars",
        "type": "ordinal",
        "title": "Cars Owned"
      },
      {
        "field": "Average Income",
        "type": "quantitative",
        "title": "Avg Income"
      }
    ]
  },
  "width": 400,
  "height": 400,
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 30,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 36,
      "labelFontSize": 30,
      "labelLimit": 0
    }
  }
}