{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Employed Persons by Sex in Solomon Islands",
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/Occupation_gender_gap.csv"
  },
  "transform": [
    {
      "filter": "datum['Pacific Island Countries'] == 'Solomon Islands'"
    },
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "Number of employed persons",
          "as": "TotalEmployed"
        }
      ],
      "groupby": [
        "Sex"
      ]
    }
  ],
  "mark": {
    "type": "bar"
  },
  "encoding": {
    "x": {
      "field": "Sex",
      "type": "nominal",
      "axis": {
        "labelAngle": -30,
        "title": "Sex"
      }
    },
    "y": {
      "field": "TotalEmployed",
      "type": "quantitative",
      "title": "Number of Employed Persons"
    },
    "color": {
      "field": "Sex",
      "type": "nominal",
      "title": "Sex",
      "scale": {
        "scheme": "category10"
      }
    },
    "tooltip": [
      {
        "field": "Sex",
        "type": "nominal",
        "title": "Sex"
      },
      {
        "field": "TotalEmployed",
        "type": "quantitative",
        "title": "Employed Persons",
        "format": ","
      }
    ]
  },
  "width": 400,
  "height": 480,
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 30,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 26,
      "labelFontSize": 26,
      "labelLimit": 0
    }
  }
}