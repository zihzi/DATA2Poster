{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Market Size and Profit by State for Earl Grey Product",
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/Coffee_Chain_3.csv"
  },
  "transform": [
    {
      "filter": "datum.Product == 'Earl Grey'"
    },
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "Profit",
          "as": "total_profit"
        }
      ],
      "groupby": [
        "State",
        "Market Size"
      ]
    }
  ],
  "mark": {
    "type": "bar"
  },
  "encoding": {
    "x": {
      "field": "State",
      "type": "nominal",
      "title": "State",
      "axis": {
        "labelAngle": -30,
        "tickCount": 6
      }
    },
    "xOffset": {
      "field": "Market Size"
    },
    "y": {
      "field": "total_profit",
      "type": "quantitative",
      "title": "Total Profit"
    },
    "color": {
      "field": "Market Size",
      "type": "nominal",
      "title": "Market Size",
      "scale": {
        "scheme": "tableau10"
      }
    },
    "tooltip": [
      {
        "field": "State",
        "type": "nominal"
      },
      {
        "field": "Market Size",
        "type": "nominal"
      },
      {
        "field": "total_profit",
        "type": "quantitative",
        "title": "Total Profit"
      }
    ]
  },
  "width": 420,
  "height": 400,
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 30,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 26,
      "labelFontSize": 26,
      "labelLimit": 0
    }
  }
}