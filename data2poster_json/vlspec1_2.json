{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top 3 Restaurants by Rating",
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/restaurant_dishes.csv"
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "mean",
          "field": "Rating",
          "as": "avg_rating"
        },
        {
          "op": "sum",
          "field": "Orders",
          "as": "total_orders"
        }
      ],
      "groupby": [
        "Restaurant",
        "Rating"
      ]
    },
    {
      "joinaggregate": [
        {
          "op": "mean",
          "field": "avg_rating",
          "as": "restaurant_avg_rating"
        }
      ],
      "groupby": [
        "Restaurant"
      ]
    },
    {
      "window": [
        {
          "op": "dense_rank",
          "as": "restaurant_rank"
        }
      ],
      "sort": [
        {
          "field": "restaurant_avg_rating",
          "order": "descending"
        }
      ]
    },
    {
      "filter": "datum.restaurant_rank <= 3"
    }
  ],
  "mark": {
    "type": "bar"
  },
  "encoding": {
    "x": {
      "field": "Restaurant",
      "type": "nominal",
      "axis": {
        "title": "Restaurant",
        "labelAngle": -30,
        "tickCount": 6
      },
      "sort": {
        "field": "restaurant_avg_rating",
        "order": "descending"
      }
    },
    "xOffset": {
      "field": "Rating"
    },
    "y": {
      "field": "total_orders",
      "type": "quantitative",
      "title": "Total Orders",
      "aggregate": "sum",
      "axis": {
        "title": "Total Orders"
      }
    },
    "color": {
      "field": "Rating",
      "type": "nominal",
      "title": "Rating",
      "scale": {
        "scheme": "set1"
      }
    },
    "tooltip": [
      {
        "field": "Restaurant",
        "type": "nominal"
      },
      {
        "field": "Rating",
        "type": "nominal"
      },
      {
        "field": "total_orders",
        "type": "quantitative",
        "title": "Total Orders"
      },
      {
        "field": "restaurant_avg_rating",
        "type": "quantitative",
        "title": "Avg. Restaurant Rating"
      }
    ]
  },
  "width": 420,
  "height": 420,
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 28,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 26,
      "labelFontSize": 26,
      "labelLimit": 0
    }
  }
}