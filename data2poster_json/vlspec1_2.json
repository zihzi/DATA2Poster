{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Sex Share Distribution",
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/Occupation_gender_gap.csv"
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "bin": {
        "maxbins": 20
      },
      "field": "Sex share",
      "type": "quantitative",
      "axis": {
        "labelAngle": -30,
        "title": "Sex Share (Proportion Female)"
      }
    },
    "y": {
      "aggregate": "count",
      "type": "quantitative",
      "title": "Record Count"
    }
  },
  "width": 600,
  "height": 400,
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 30,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 26,
      "labelFontSize": 26,
      "labelLimit": 0
    }
  }
}