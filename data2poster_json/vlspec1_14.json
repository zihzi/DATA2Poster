{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top 5 Retailers by Average Sales Method",
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/adidas_sale.csv"
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "mean",
          "field": "Total Sales",
          "as": "avg_sales"
        }
      ],
      "groupby": [
        "Retailer",
        "Sales Method"
      ]
    },
    {
      "window": [
        {
          "op": "rank",
          "as": "retailer_rank"
        }
      ],
      "sort": [
        {
          "field": "avg_sales",
          "order": "descending"
        }
      ]
    },
    {
      "filter": "datum.retailer_rank <= 5"
    }
  ],
  "mark": {
    "type": "bar"
  },
  "encoding": {
    "x": {
      "field": "Sales Method",
      "type": "nominal",
      "axis": {
        "title": "Sales Method",
        "labelAngle": -30,
        "tickCount": 6
      }
    },
    "xOffset": {
      "field": "Retailer"
    },
    "y": {
      "field": "avg_sales",
      "type": "quantitative",
      "title": "Average Total Sales"
    },
    "color": {
      "field": "Retailer",
      "type": "nominal",
      "scale": {
        "scheme": "tableau10"
      },
      "title": "Retailer"
    },
    "tooltip": [
      {
        "field": "Sales Method",
        "type": "nominal"
      },
      {
        "field": "Retailer",
        "type": "nominal"
      },
      {
        "field": "avg_sales",
        "type": "quantitative",
        "format": ",.2f",
        "title": "Average Total Sales"
      }
    ]
  },
  "width": 420,
  "height": 420,
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 30,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 36,
      "labelFontSize": 30,
      "labelLimit": 0
    }
  }
}