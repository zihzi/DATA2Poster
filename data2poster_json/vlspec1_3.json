{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top 3 Colors by Sunlight GrowthScore",
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/flower_1.csv"
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "mean",
          "field": "GrowthScore",
          "as": "avg_GrowthScore"
        }
      ],
      "groupby": [
        "Color",
        "Sunlight"
      ]
    },
    {
      "joinaggregate": [
        {
          "op": "mean",
          "field": "avg_GrowthScore",
          "as": "ColorMean"
        }
      ],
      "groupby": [
        "Color"
      ]
    },
    {
      "window": [
        {
          "op": "dense_rank",
          "as": "ColorRank"
        }
      ],
      "sort": [
        {
          "field": "ColorMean",
          "order": "descending"
        }
      ]
    },
    {
      "filter": "datum.ColorRank <= 3"
    }
  ],
  "mark": {
    "type": "bar"
  },
  "encoding": {
    "x": {
      "field": "Color",
      "type": "nominal",
      "title": "Color",
      "axis": {
        "labelAngle": -30,
        "tickCount": 6
      },
      "sort": [
        "Green",
        "Yellow",
        "Red"
      ]
    },
    "xOffset": {
      "field": "Sunlight"
    },
    "y": {
      "field": "avg_GrowthScore",
      "type": "quantitative",
      "title": "Average GrowthScore"
    },
    "color": {
      "field": "Sunlight",
      "type": "nominal",
      "title": "Sunlight",
      "scale": {
        "scheme": "tableau10"
      }
    },
    "tooltip": [
      {
        "field": "Color",
        "type": "nominal",
        "title": "Color"
      },
      {
        "field": "Sunlight",
        "type": "nominal",
        "title": "Sunlight"
      },
      {
        "field": "avg_GrowthScore",
        "type": "quantitative",
        "title": "Average GrowthScore",
        "format": ".2f"
      }
    ]
  },
  "width": 420,
  "height": 400,
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 30,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 26,
      "labelFontSize": 26,
      "labelLimit": 0
    }
  }
}