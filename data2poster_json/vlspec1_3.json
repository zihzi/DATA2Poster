{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Total Sales Comparison Across Sales Methods",
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/adidas_sale.csv"
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "Total Sales",
          "as": "TotalSales"
        }
      ],
      "groupby": [
        "Sales Method"
      ]
    }
  ],
  "mark": {
    "type": "bar"
  },
  "encoding": {
    "x": {
      "field": "Sales Method",
      "type": "nominal",
      "axis": {
        "title": "Sales Method",
        "labelAngle": -30,
        "tickCount": 6
      }
    },
    "y": {
      "field": "TotalSales",
      "type": "quantitative",
      "title": "Total Sales"
    }
  },
  "width": 420,
  "height": 420,
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 30,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 26,
      "labelFontSize": 26,
      "labelLimit": 0
    }
  }
}