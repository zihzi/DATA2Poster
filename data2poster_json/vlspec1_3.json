{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top 3 Creative Types by Content Rating",
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/movies.csv"
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "Worldwide Gross",
          "as": "Total_Worldwide_Gross"
        }
      ],
      "groupby": [
        "Content Rating",
        "Creative Type"
      ]
    },
    {
      "window": [
        {
          "op": "rank",
          "as": "CreativeType_rank"
        }
      ],
      "sort": [
        {
          "field": "Total_Worldwide_Gross",
          "order": "descending"
        }
      ]
    },
    {
      "filter": "datum.CreativeType_rank <= 3"
    }
  ],
  "mark": {
    "type": "bar",
    "cornerRadius": 2
  },
  "encoding": {
    "x": {
      "field": "Content Rating",
      "type": "nominal",
      "title": "Content Rating",
      "axis": {
        "labelAngle": -30,
        "tickCount": 6
      },
      "sort": "-y"
    },
    "y": {
      "field": "Total_Worldwide_Gross",
      "type": "quantitative",
      "title": "Worldwide Gross",
      "axis": {
        "tickCount": 6
      }
    },
    "xOffset": {
      "field": "Creative Type"
    },
    "color": {
      "field": "Creative Type",
      "type": "nominal",
      "title": "Creative Type",
      "scale": {
        "scheme": "category10"
      }
    },
    "tooltip": [
      {
        "field": "Creative Type",
        "type": "nominal",
        "title": "Creative Type"
      },
      {
        "field": "Content Rating",
        "type": "nominal",
        "title": "Content Rating"
      },
      {
        "field": "Total_Worldwide_Gross",
        "type": "quantitative",
        "title": "Worldwide Gross"
      }
    ]
  },
  "width": 420,
  "height": 400,
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 30,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 26,
      "labelFontSize": 26,
      "labelLimit": 0
    }
  }
}