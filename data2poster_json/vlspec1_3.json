{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top 3 Years Worldwide $m by Type",
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/movies_record.csv"
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "Worldwide $m",
          "as": "Total_Worldwide_m"
        }
      ],
      "groupby": [
        "Year",
        "Type"
      ]
    },
    {
      "joinaggregate": [
        {
          "op": "sum",
          "field": "Total_Worldwide_m",
          "as": "YearTotal"
        }
      ],
      "groupby": [
        "Year"
      ]
    },
    {
      "window": [
        {
          "op": "dense_rank",
          "as": "YearRank"
        }
      ],
      "sort": [
        {
          "field": "YearTotal",
          "order": "descending"
        }
      ]
    },
    {
      "filter": "datum.YearRank <= 3"
    }
  ],
  "mark": {
    "type": "bar"
  },
  "encoding": {
    "x": {
      "field": "Type",
      "type": "nominal",
      "title": "Type",
      "axis": {
        "labelAngle": -30,
        "tickCount": 6
      }
    },
    "xOffset": {
      "field": "Year"
    },
    "y": {
      "field": "Total_Worldwide_m",
      "type": "quantitative",
      "title": "Total Worldwide Revenue (million $)"
    },
    "color": {
      "field": "Year",
      "type": "ordinal",
      "title": "Year",
      "scale": {
        "scheme": "tableau10"
      }
    },
    "tooltip": [
      {
        "field": "Year",
        "type": "ordinal",
        "title": "Year"
      },
      {
        "field": "Type",
        "type": "nominal",
        "title": "Type"
      },
      {
        "field": "Total_Worldwide_m",
        "type": "quantitative",
        "title": "Total Worldwide $m"
      }
    ]
  },
  "width": 420,
  "height": 400,
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 30,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 26,
      "labelFontSize": 26,
      "labelLimit": 0
    }
  }
}