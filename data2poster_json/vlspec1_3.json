{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top 3 Brands by Category",
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/fashion_products.csv"
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "count",
          "as": "brand_cat_count"
        },
        {
          "op": "mean",
          "field": "Rating",
          "as": "avg_rating"
        }
      ],
      "groupby": [
        "Brand",
        "Category"
      ]
    },
    {
      "joinaggregate": [
        {
          "op": "sum",
          "field": "brand_cat_count",
          "as": "BrandTotal"
        }
      ],
      "groupby": [
        "Brand"
      ]
    },
    {
      "window": [
        {
          "op": "dense_rank",
          "as": "BrandRank"
        }
      ],
      "sort": [
        {
          "field": "BrandTotal",
          "order": "descending"
        }
      ]
    },
    {
      "filter": "datum.BrandRank <= 3"
    }
  ],
  "mark": {
    "type": "bar"
  },
  "encoding": {
    "x": {
      "field": "Brand",
      "type": "nominal",
      "title": "Brand",
      "sort": "-y",
      "axis": {
        "labelAngle": -30
      }
    },
    "xOffset": {
      "field": "Category"
    },
    "y": {
      "field": "avg_rating",
      "type": "quantitative",
      "title": "Average Rating"
    },
    "color": {
      "field": "Category",
      "type": "nominal",
      "title": "Category",
      "scale": {
        "scheme": "tableau10"
      }
    },
    "tooltip": [
      {
        "field": "Brand",
        "type": "nominal",
        "title": "Brand"
      },
      {
        "field": "Category",
        "type": "nominal",
        "title": "Category"
      },
      {
        "field": "avg_rating",
        "type": "quantitative",
        "title": "Avg Rating",
        "format": ".2f"
      },
      {
        "field": "brand_cat_count",
        "type": "quantitative",
        "title": "Item Count"
      },
      {
        "field": "BrandTotal",
        "type": "quantitative",
        "title": "Brand Total",
        "format": ","
      }
    ]
  },
  "width": 420,
  "height": 400,
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 30,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 26,
      "labelFontSize": 26,
      "labelLimit": 0
    }
  }
}