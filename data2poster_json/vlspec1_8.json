{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top 3 Beverage Categories by Beverage",
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/starbucks.csv"
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "count",
          "as": "beverage_count"
        }
      ],
      "groupby": [
        "Beverage_category",
        "Beverage"
      ]
    },
    {
      "aggregate": [
        {
          "op": "count",
          "as": "distinct_beverages"
        }
      ],
      "groupby": [
        "Beverage_category"
      ]
    },
    {
      "window": [
        {
          "op": "rank",
          "as": "category_rank"
        }
      ],
      "sort": [
        {
          "field": "distinct_beverages",
          "order": "descending"
        }
      ]
    },
    {
      "filter": "datum.category_rank <= 3"
    }
  ],
  "mark": {
    "type": "bar",
    "cornerRadius": 2
  },
  "encoding": {
    "y": {
      "field": "Beverage",
      "type": "nominal",
      "sort": {
        "field": "beverage_count",
        "order": "descending"
      },
      "title": "Beverage"
    },
    "x": {
      "field": "beverage_count",
      "type": "quantitative",
      "title": "Count of Beverage Entries",
      "sort": "descending"
    },
    "xOffset": {
      "field": "Beverage_category"
    },
    "color": {
      "field": "Beverage_category",
      "type": "nominal",
      "title": "Beverage Category"
    },
    "tooltip": [
      {
        "field": "Beverage",
        "type": "nominal"
      },
      {
        "field": "Beverage_category",
        "type": "nominal"
      },
      {
        "field": "beverage_count",
        "type": "quantitative",
        "title": "Entries"
      }
    ]
  },
  "width": 420,
  "height": 400,
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 28,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 26,
      "labelFontSize": 26,
      "labelLimit": 0
    }
  }
}