{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "GrowthScore of Bottom 3 Species by Sunlight",
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/flower_1.csv"
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "mean",
          "field": "GrowthScore",
          "as": "mean_growthscore"
        }
      ],
      "groupby": [
        "Species"
      ]
    },
    {
      "window": [
        {
          "op": "dense_rank",
          "as": "SpeciesRank"
        }
      ],
      "sort": [
        {
          "field": "mean_growthscore",
          "order": "ascending"
        }
      ]
    },
    {
      "filter": "datum.SpeciesRank <= 3"
    },
    {
      "lookup": "Species",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/flower_1.csv"
        },
        "key": "Species",
        "fields": [
          "Sunlight",
          "GrowthScore"
        ]
      }
    }
  ],
  "mark": {
    "type": "bar"
  },
  "encoding": {
    "x": {
      "field": "Species",
      "type": "nominal",
      "title": "Species",
      "sort": {
        "order": "descending"
      }
    },
    "xOffset": {
      "field": "Sunlight"
    },
    "y": {
      "aggregate": "mean",
      "field": "GrowthScore",
      "type": "quantitative",
      "title": "Mean GrowthScore",
      "sort": "descending"
    },
    "color": {
      "field": "Sunlight",
      "type": "nominal",
      "title": "Sunlight",
      "scale": {
        "scheme": "tableau10"
      }
    },
    "tooltip": [
      {
        "field": "Species",
        "type": "nominal",
        "title": "Species"
      },
      {
        "field": "Sunlight",
        "type": "nominal",
        "title": "Sunlight"
      },
      {
        "field": "GrowthScore",
        "type": "quantitative",
        "aggregate": "mean",
        "title": "Mean GrowthScore",
        "format": ".2f"
      }
    ]
  },
  "width": 420,
  "height": 400,
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 28,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 26,
      "labelFontSize": 26,
      "labelLimit": 0
    }
  }
}