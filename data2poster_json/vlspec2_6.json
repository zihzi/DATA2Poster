{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Employment by Sex in Kiribati",
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/Occupation_by_gender.csv"
  },
  "transform": [
    {
      "filter": "datum['Pacific Island Countries'] == 'Kiribati'"
    },
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "Number of employed persons",
          "as": "Total Employed"
        }
      ],
      "groupby": [
        "Sex"
      ]
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Sex",
      "type": "nominal",
      "axis": {
        "labelAngle": 0,
        "title": "Sex",
        "tickCount": 6,
        "labelFontWeight": "normal",
        "titleFontWeight": "normal"
      }
    },
    "y": {
      "field": "Total Employed",
      "type": "quantitative",
      "title": "Number of Employed Persons",
      "scale": {
        "zero": true
      },
      "axis": {
        "labelFontWeight": "normal",
        "titleFontWeight": "normal",
        "tickCount": 6
      }
    },
    "color": {
      "field": "Sex",
      "type": "nominal",
      "scale": {
        "range": [
          "#4c78a8",
          "#a0cbe8"
        ]
      },
      "legend": null
    }
  },
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 30,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 36,
      "labelFontSize": 30,
      "labelLimit": 0
    }
  },
  "height": 600,
  "width": 800
}