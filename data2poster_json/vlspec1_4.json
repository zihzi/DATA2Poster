{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Income by Age for 0-Car Owners with 0-1 Mile Commute",
    "anchor": "middle"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/bike_buyers.csv"
  },
  "transform": [
    {
      "filter": "datum.Cars == 0 && datum['Commute Distance'] == '0-1 Miles'"
    }
  ],
  "mark": {
    "type": "point"
  },
  "encoding": {
    "x": {
      "field": "Age",
      "type": "quantitative",
      "title": "Age",
      "axis": {
        "labelAngle": -30,
        "tickCount": 6
      }
    },
    "y": {
      "field": "Income",
      "type": "quantitative",
      "title": "Income",
      "axis": {
        "tickCount": 6
      }
    },
    "color": {
      "field": "Income",
      "type": "quantitative",
      "scale": {
        "scheme": "tableau10"
      },
      "title": "Income"
    },
    "tooltip": [
      {
        "field": "Age",
        "type": "quantitative",
        "title": "Age"
      },
      {
        "field": "Income",
        "type": "quantitative",
        "title": "Income"
      }
    ]
  },
  "width": 400,
  "height": 400,
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 30,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 36,
      "labelFontSize": 30,
      "labelLimit": 0
    }
  }
}