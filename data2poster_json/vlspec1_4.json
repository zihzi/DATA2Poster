{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Sex Share by Sector in Cook Islands",
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/Occupation_gender_gap.csv"
  },
  "transform": [
    {
      "filter": "datum['Pacific Island Countries'] == 'Cook Islands'"
    },
    {
      "aggregate": [
        {
          "op": "mean",
          "field": "Sex share",
          "as": "MeanSexShare"
        }
      ],
      "groupby": [
        "Economic sector",
        "Sex"
      ]
    }
  ],
  "mark": {
    "type": "bar"
  },
  "encoding": {
    "x": {
      "field": "Economic sector",
      "type": "nominal",
      "axis": {
        "labelAngle": -30,
        "title": "Economic Sector"
      }
    },
    "y": {
      "field": "MeanSexShare",
      "type": "quantitative",
      "title": "Average Sex Share"
    },
    "xOffset": {
      "field": "Sex"
    },
    "color": {
      "field": "Sex",
      "type": "nominal",
      "title": "Sex",
      "scale": {
        "scheme": "category10"
      }
    },
    "tooltip": [
      {
        "field": "Economic sector",
        "type": "nominal",
        "title": "Sector"
      },
      {
        "field": "Sex",
        "type": "nominal",
        "title": "Sex"
      },
      {
        "field": "MeanSexShare",
        "type": "quantitative",
        "title": "Mean Sex Share",
        "format": ".2f"
      }
    ]
  },
  "width": 600,
  "height": 480,
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 30,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 26,
      "labelFontSize": 26,
      "labelLimit": 0
    }
  }
}