{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Sales Channel Share for Foot Locker and Kohl's",
  "data": {
    "url": "https://raw.githubusercontent.com/zihzi/DATA2Poster/refs/heads/main/data/adidas_sale.csv"
  },
  "transform": [
    {
      "filter": "datum.Retailer === 'Foot Locker' || datum.Retailer === \"Kohl's\""
    },
    {
      "filter": "datum['Sales Method'] === 'In-store' || datum['Sales Method'] === 'Outlet'"
    },
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "Total Sales",
          "as": "total_sales"
        }
      ],
      "groupby": [
        "Retailer",
        "Sales Method"
      ]
    },
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "total_sales",
          "as": "Retailer_Total"
        }
      ],
      "groupby": [
        "Retailer"
      ]
    },
    {
      "calculate": "datum.total_sales / datum.Retailer_Total",
      "as": "channel_share"
    },
    {
      "window": [
        {
          "op": "rank",
          "as": "slice_rank"
        }
      ],
      "sort": [
        {
          "field": "channel_share",
          "order": "descending"
        }
      ],
      "frame": [
        null,
        null
      ]
    },
    {
      "calculate": "datum.slice_rank > 4 ? 'Others' : datum['Retailer'] + ' - ' + datum['Sales Method']",
      "as": "Channel_Slice"
    },
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "total_sales",
          "as": "slice_sales"
        },
        {
          "op": "sum",
          "field": "channel_share",
          "as": "slice_share"
        }
      ],
      "groupby": [
        "Channel_Slice"
      ]
    },
    {
      "window": [
        {
          "op": "rank",
          "as": "final_rank"
        }
      ],
      "sort": [
        {
          "field": "slice_share",
          "order": "descending"
        }
      ],
      "frame": [
        null,
        null
      ]
    },
    {
      "filter": "datum.final_rank <= 5"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "arc",
        "innerRadius": 0
      },
      "encoding": {
        "theta": {
          "field": "slice_sales",
          "type": "quantitative"
        },
        "color": {
          "field": "Channel_Slice",
          "type": "nominal",
          "legend": {
            "title": "Retailer & Sales Channel"
          },
          "scale": {
            "scheme": "tableau10"
          }
        },
        "order": {
          "field": "slice_sales",
          "type": "quantitative",
          "sort": "descending"
        },
        "tooltip": [
          {
            "field": "Channel_Slice",
            "type": "nominal",
            "title": "Retailer & Channel"
          },
          {
            "field": "slice_sales",
            "type": "quantitative",
            "title": "Total Sales",
            "format": ","
          },
          {
            "field": "slice_share",
            "type": "quantitative",
            "title": "Sales Share",
            "format": ".1%"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 30,
        "fontWeight": "bold"
      },
      "encoding": {
        "theta": {
          "field": "slice_sales",
          "type": "quantitative",
          "stack": true
        },
        "order": {
          "field": "slice_sales",
          "type": "quantitative",
          "sort": "descending"
        },
        "radius": {
          "value": 130
        },
        "text": {
          "field": "slice_share",
          "type": "quantitative",
          "format": ".1%"
        },
        "color": {
          "value": "black"
        }
      }
    }
  ],
  "width": 440,
  "height": 480,
  "config": {
    "title": {
      "fontSize": 44
    },
    "axis": {
      "titleFontSize": 44,
      "labelFontSize": 30,
      "tickCount": 6,
      "labelLimit": 0,
      "titlePadding": 10
    },
    "legend": {
      "titleFontSize": 26,
      "labelFontSize": 26,
      "labelLimit": 0
    }
  }
}